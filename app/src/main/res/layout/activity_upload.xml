<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UploadActivity" >

    <TextView
        android:id="@+id/labeFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="File:" />

    <EditText
        android:id="@+id/testFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/labeFile"
        android:ems="10"
        android:text="/sdcard/test.mp4" />

    <Button
        android:id="@+id/buttonUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/testFile"
        android:layout_alignRight="@+id/testFile"
        android:layout_below="@+id/testFile"
        android:text="Upload" />

    <TextView
        android:id="@+id/labelRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonUpload"
        android:layout_below="@+id/buttonUpload"
        android:text="Retry Indexes:" />

    <Button
        android:id="@+id/buttonRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textRetry"
        android:layout_alignRight="@+id/textRetry"
        android:layout_below="@+id/textRetry"
        android:text="Retry" />

    <EditText
        android:id="@+id/textRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/labelRetry"
        android:layout_alignRight="@+id/buttonUpload"
        android:layout_below="@+id/labelRetry"
        android:ems="10"
        android:text="1 2" />

</RelativeLayout>